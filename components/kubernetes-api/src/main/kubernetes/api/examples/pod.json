{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "php",
    "labels": {
      "name": "foo"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "nginx",
        "image": "dockerfile/nginx",
        "ports": [
          {
            "hostPort": 8080,
            "containerPort": 80,
            "protocol": "TCP"
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "path": "/index.html",
            "port": 8080
          },
          "initialDelaySeconds": 30,
          "timeoutSeconds": 1
        },
        "imagePullPolicy": "IfNotPresent"
      }
    ]
  }
}